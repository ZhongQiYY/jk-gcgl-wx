/* 搜索框固定在上部的样式 */
.search {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background-color: white;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.search1 {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background-color: white;
  padding-top: 0rpx;
  padding-bottom: 0rpx;
}

/* 按时间搜索和筛选框的样式 */
.search-date,
.search-type {
  text-align: center;
  height: 60rpx;
  padding-top: 20rpx;
}

.search-date image,
.search-type image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
  vertical-align: text-bottom;
}

.middle {
  border: 1rpx solid rgb(233, 222, 222);
  height: 65rpx;
  margin-top: 15rpx;
}

/* 审核列表的样式，主要是为了让上下两个固定框不遮挡列表内容 */
.chekc-record-list {
  margin-top: 105rpx;
  margin-bottom: 20rpx;
}

.application-name {
  width: 170rpx;
}

.application-date {
  font-size: x-small;
  line-height: 15rpx;
}

.application-state {
  font-size: x-small;
  line-height: 20rpx;
}

.application-name image {
  width: 30rpx;
  height: 30rpx;
  /* vertical-align: middle; */
}
.weui-btn {
  width: 100%;
  padding: 25rpx 0rpx;
}

/* 项目库集合整体page样式 */
.project-list-info {
  padding-top: 100rpx;
}

.placeholder {
  /* margin: 5px; */
  /* padding: 0 10px; */
  text-align: center;
  background-color: #EBEBEB;
  height: 2.3em;
  line-height: 2.3em;
  color: #cfcfcf;
}


/* 详情表格样式 */
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;

  /* 也可以不定高度auto,不过对动画效果有影响 */
  transition: all .5s ease;
  opacity:1
}
.showBorder{
  border: 1px solid gray;
}
.hide {
  height: 0;
  opacity:0;
  position: relative;
  z-index: 10;
}
.td {
  border: 1px solid gray;
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.bg-w{
  border: 1px solid gray;
  background: snow;
  position: relative;
  z-index: 100;
}
.bg-g{
  background: #f0f0f0;
}
.th {
  width: 100%;
  justify-content: center;
  background: #cccccc;
  /* color: #fff; */
  display: flex;
  height: 3rem;
  align-items: center;
}

.wsui-btn__hover_list {
  opacity: 0.5;
  background: #f7f7f7;
}

#projectImage {
  width: 100%;
  text-align: center;
  height: 490rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.projectBack {
  background-color: #0089dd;
}