<loading hidden="{{loadingHidden}}">
        加载中...
</loading>

<view class="{{search}}">
	<view class="weui-flex">

		<view class="weui-flex__item">
			<picker bindchange="bindBuildChange" value="{{buildIndex}}" range="{{buildArray}}">
				<view class="search-type">
					<image src="/images/sgdw.png"></image>
					<text>{{buildArray[buildIndex]}}</text>
				</view>
			</picker>
		</view>

		<!-- 画竖线 -->
		<view class="middle"></view>

		<view class="weui-flex__item">
			<picker bindchange="bindCategoryChange" value="{{categoryIndex}}" range="{{categoryArray}}">
				<view class="search-type">
					<image src="/images/xmlb.png"></image>
					<text>{{categoryArray[categoryIndex]}}</text>
				</view>
			</picker>
		</view>
	</view>
</view>


 
<view class="page project-list-info" data-weui-theme="{{theme}}">
<view hidden="{{errorInfo}}">错误，请下拉刷新或重新登录</view>
	<!-- 项目列表页 -->
	<view class="page__bd">
		<view class="weui-cells">
			<view 
			data-text="{{item.projectName}}" 
			data-id="{{item.id}}" 
			data-categoryType="{{item.categoryType}}" 
			bindtap="showProjectInfo" 
			class="weui-cell weui-cell_example " 
			wx:for="{{projectList}}" 
			wx:key="index"
			style="height: 145rpx;"
			class="weui-cell weui-cell_active">
				<view style="position: absolute; top: 20rpx;display:flex;">
					<view class="weui-cell__hd" style="position: relative; margin-right: 10px;">
						<image src="{{rootPath}}{{item.effectPicture}}" style="width: 200rpx;height: 130rpx;display: block;"></image>
						<text class="weui-badge" style="position: absolute; top: -0.4em; right: -0.4em;">8</text>
					</view>

					<view class="weui-cell__bd">
						<view>{{item.projectName}}</view>
						<view style="font-size: 13px; color: #888;">{{item.unitName}}</view>
					</view>

					<view style="position: absolute; top: 130rpx;border: 1px solid blue;width: 700rpx">
						
					</view>
				</view>
			</view>
		</view>

		<view> 
		 	<view class='data-loading' hidden='{{dataHidden}}'>  
				数据加载中...  
			</view> 
			<view class='data-loading' hidden='{{dataHidden_last}}'>  
				没有更多了...  
			</view> 
		</view>
	</view>
</view>