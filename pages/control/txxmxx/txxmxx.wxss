page{
  background-color: rgba(241, 241, 241);
  --white: #ffffff;
	--gradualBlue: linear-gradient(45deg, #0081ff, #1cbbb4);
}
/* 字体样式 */
.plan-schedule-font{
  font-size: 40rpx;
  height: 90rpx;
  line-height: 90rpx;
}
/* 大按钮点击效果 */
.plan-schedule-hover{
  opacity: 0.9;
  transform: scale(0.99, 0.99);
}

/* 悬浮卡片-外部 */
.suspension-card-external-page{
  /* height: 300rpx; */
  padding-bottom: 30rpx;
}
/* 悬浮卡片-内部 */
.suspension-card-internal-page{
  height: 350rpx;
  background-image: var(--gradualBlue);
	color: var(--white);
	text-align: center;
	border-radius: 6rpx;
  padding: 30rpx;
}
.shadow-blur {
	position: relative;
}
.shadow-blur::before {
	content: "";
	display: block;
	background: inherit;
	filter: blur(10rpx);
	position: absolute;
	width: 100%;
	height: 100%;
	top: 10rpx;
	left: 10rpx;
	z-index: -1;
	opacity: 0.4;
	transform-origin: 0 0;
	border-radius: inherit;
	transform: scale(1, 1);
}