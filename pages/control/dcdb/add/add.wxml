        完成时限: {{date}}
      </view>
    </picker>
  </view>
  <view>
    主办：
    <input type='text' name="zb" value='' placeholder='请输入主办' />
  </view>
  <view>
    协办：
    <input type='text' name="xb" value='' placeholder='请输入协办' />
  </view>
  <button form-type='submit'>保存</button>
