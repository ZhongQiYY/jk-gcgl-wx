  <view>序号：
    <input type='text' name="id" value='' placeholder='请输入序号'/>
  </view>
  <view>工作内容：
    <input type='text' name="content" value='' placeholder='请输入工作内容' />
  </view>
  <view class="tui-picker-content">
    <picker mode="date" value="{{date}}" start="2017-10-01" end="2017-10-08" bindchange="changeDate">
