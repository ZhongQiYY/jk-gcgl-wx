<van-toast id="van-toast" />
<view>
	<van-panel
	 title="{{problem.project.projectName}}"
	 desc="{{problem.project.unitName}}    {{problem.submitter}}    {{problem.commitTime}}"
	 use-footer-slot
	>

		<van-cell-group>
			<van-field
			 readonly
			 value="{{problem.description}}"
			 label="问题描述"
			 type="textarea"
			 placeholder="请输入存在问题"
			 autosize
			 show-word-limit
			 maxlength="{{maxProblemLength}}"
			 bind:input="inputProblem"
			 border="{{true}}"
			/>

			<van-cell
			 title="整改期限"
			 value="{{finalTime}}"
			 bind:click="onDisplay"
			 is-link
			/>
			<van-calendar
			 show="{{show}}"
			 bind:close="onClose"
			 bind:confirm="onConfirm"
			/>
			<block wx:for="{{problem.imageList}}">
				<van-image
			 width="100"
			 height="100"
			 lazy-load
			 src="{{item.imageUrl?'http://localhost:16000'+item.imageUrl:''}}"
			/>
			</block>
		

			
		</van-cell-group>
	</van-panel>

	<view style="background-color: #fff" >
		<van-divider contentPosition="center">回复</van-divider>
			<van-field
			value=""
			label="整改回复"
			type="textarea"
			placeholder="请输入"
			autosize
			show-word-limit
			maxlength="{{maxPlanLength}}"
			bind:input="{{inputPlan}}"
			border="{{true}}"
			/>
			<view class='ui_uploader_cell'>
				<view class='ui_uploader_item' wx:for="{{files1}}" wx:key="{{index}}">
					<icon class='ui_uploader_item_icon' bindtap='clearImg1' data-index="{{index}}" type="clear" size="20" color="red" />
					<image bindtap='previewImage1' data-index="{{index}}" src='{{item}}'></image>
				</view>
				<view class='ui_uploader' bindtap='chooseImage1' wx:if="{{ files1.length < 10 }}"></view>
			</view>
	<van-button color="#0089dd" size="small">完成</van-button>
	</view>
</view>

