
<controlSearch 
projectNames="{{projectNames}}"
bind:inputTyping="inputTyping" 
bind:selectProject="selectProject" 
>
</controlSearch>


<!-- 模糊横线 -->
<view style="width:80%;border:1rpx solid gray;opacity:0.1;margin:auto"></view>

<!-- 提交问题计划区域 -->
<!-- 项目名称显示 -->
<view class="weui-form__text-area">
	<h2 class="weui-form__title">{{projectName}}</h2>
</view>
<!-- 存在问题 -->
<view class="weui-form__control-area">
	<view class="weui-cells__group weui-cells__group_form">
		<view class="weui-cells__title">存在问题</view>
		<view class="weui-cells weui-cells_form">

			<textarea style="height:500rpx;margin: 0 25rpx 0 25rpx;" class="weui-textarea" placeholder="请描述所存在的问题" value="{{currentProblem}}" maxlength="{{maxProblemLength}}" bindinput="inputProblem"></textarea>
			<view class="weui-textarea-counter"><text>{{currentProblem.length}}</text>/{{maxProblemLength}}</view>

		</view>
	</view>
</view>
<!-- 下一步工作计划 -->
<view class="weui-form__control-area">
	<view class="weui-cells__group weui-cells__group_form">
		<view class="weui-cells__title">下一步工作计划</view>
		<view class="weui-cells weui-cells_form">

			<textarea style="height:500rpx;margin: 0 25rpx 0 25rpx;" class="weui-textarea" placeholder="请描述下一步工作计划" value="{{currentPlan}}" maxlength="{{maxPlanLength}}" bindinput="inputPlan"></textarea>
			<view class="weui-textarea-counter"><text>{{currentPlan.length}}</text>/{{maxPlanLength}}</view>

		</view>
	</view>
</view>

<button hover-class="submit-hover" bindtap="submitProblemPlan" style="background-color:#0089dd" class="weui-btn weui-btn_primary">提交</button>


<!-- 提交记录 -->
<view hover-class="subHover" bindtap="submitRecord" style="position:absolute;left:50%;top:140%;transform:translate(-50%,0);color:#0089dd">提交记录</view>
