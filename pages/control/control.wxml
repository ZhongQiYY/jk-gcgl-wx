					<van-grid-item badge="{{}}" bind:click="toTzwj" icon="/images/tjtzwj.png" text="提交图纸文件" />
				</van-grid>
			</van-cell-group>
		</view>
	</view>

	<!-- 总工办 -->
	<view class="suspension-card-external">
		<view class="suspension-card-internal">
			<van-cell-group title="总工办操作区">
				<van-grid square clickable column-num="3" border="{{false}}">
					<van-grid-item badge="{{}}" bind:click="toAqjc" icon="/images/aqjc.png" text="提交安全检查" />
					<van-grid-item badge="{{}}" bind:click="toTptx" icon="/images/tjtptx.png" text="提交图片图像" />
				</van-grid>
