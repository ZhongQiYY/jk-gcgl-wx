		</view>
	</view>

	<!-- 督察部 -->
	<view class="suspension-card-external">
		<view class="suspension-card-internal">
			<van-cell-group title="督察部操作区">
				<van-grid square clickable column-num="3" border="{{false}}">
					<van-grid-item badge="{{}}" bind:click="toZljc" icon="/images/tjzljc.png" text="提交质量检查" />
				</van-grid>
			</van-cell-group>
		</view>
	</view>

	<!-- 各公司/部门一人 -->
	<view class="suspension-card-external">
		<view class="suspension-card-internal">
			<van-cell-group title="各公司/部门操作区">
